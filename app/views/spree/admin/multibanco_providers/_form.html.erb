<div data-hook="admin_inside_multibanco_provider_form" class="row">
  <div class="col-md-6">
    <%= f.field_container :name, class: ['form-group'] do %>
      <%= f.label :name, Spree.t(:multibanco_provider_name) %> <span class="required">*</span>
      <%= f.text_field :name, :class => 'form-control' %>
      <%= f.error_message_on :name %>
    <% end %>

    <%= f.field_container :entity, class: ['form-group'] do %>
      <%= f.label :entity, Spree.t(:multibanco_provider_entity) %> <span class="required">*</span>
      <%= f.text_field :entity, :class => 'form-control' %>
    <% end %>

    <%= f.field_container :subentity, class: ['form-group'] do %>
      <%= f.label :subentity, Spree.t(:multibanco_provider_subentity) %> <span class="required">*</span>
      <%= f.text_field :subentity, :class => 'form-control' %>
    <% end %>

    <%= f.field_container :active, class: ['form-group'] do %>
      <%= f.check_box :active %>
      <%= f.label :active, Spree.t(:multibanco_provider_active) %>
    <% end %>

  </div>
</div>